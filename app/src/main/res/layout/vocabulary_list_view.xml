<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:orientation="vertical"
    android:layout_height="wrap_content">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/mainLayer"
        android:visibility="gone"
        android:orientation="vertical">

        <TextView
            android:id="@+id/word"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:padding="6dp"
            android:text="Word : " />

        <TextView
            android:id="@+id/origin"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:padding="6dp"
            android:text="Origin : " />

        <TextView
            android:id="@+id/phonetic"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:padding="6dp"
            android:text="Phonetic : " />

        <TextView
            android:id="@+id/sourceUrls"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:padding="6dp"
            android:text="Sources : " />

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:padding="6dp"
            android:textSize="15sp"
            android:textColor="@android:color/black"
            android:textStyle="italic|bold"
            android:text="Phonetics" />

        <androidx.recyclerview.widget.RecyclerView
            android:id="@+id/phoneticsRecycler"
            android:layout_width="match_parent"
            android:padding="6dp"
            android:layout_marginStart="30dp"
            android:layout_height="wrap_content" />

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:padding="6dp"
            android:textSize="15sp"
            android:textColor="@android:color/black"
            android:textStyle="italic|bold"
            android:text="Meanings" />
        <androidx.recyclerview.widget.RecyclerView
            android:id="@+id/meaningsRecycler"
            android:layout_width="match_parent"
            android:padding="6dp"
            android:layout_marginStart="30dp"
            android:layout_height="wrap_content" />


    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/phonetics"
        android:layout_marginTop="10dp"
        android:orientation="vertical">

        <TextView
            android:id="@+id/phoneticText"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:padding="6dp"
            android:text="Text : " />

        <ImageView
            android:id="@+id/phoneticPlpay"
            android:layout_width="35dp"
            android:layout_margin="6dp"
            android:src="@drawable/ic_baseline_play_circle_outline_24"
            android:layout_height="35dp" />


    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/meaning"
        android:layout_marginTop="10dp"
        android:orientation="vertical">

        <TextView
            android:id="@+id/speech"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:padding="6dp"
            android:text="Parts of Speech : " />

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:padding="6dp"
            android:textSize="15sp"
            android:textColor="@android:color/black"
            android:textStyle="italic|bold"
            android:text="Definations &amp; Examples" />

        <androidx.recyclerview.widget.RecyclerView
            android:id="@+id/dictionaryRecycler"
            android:layout_width="match_parent"
            android:padding="6dp"
            android:layout_marginStart="30dp"
            android:layout_height="wrap_content" />

        <TextView
            android:id="@+id/synonyms"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:padding="6dp"
            android:text="Synonyms : " />

        <TextView
            android:id="@+id/antonyms"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:padding="6dp"
            android:text="Antonyms : " />


    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/definations"
        android:layout_marginTop="20dp"
        android:orientation="vertical">

        <TextView
            android:id="@+id/defination"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:padding="6dp"
            android:text="Defination : " />

        <TextView
            android:id="@+id/example"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:padding="6dp"
            android:text="Example : " />


    </LinearLayout>


</LinearLayout>